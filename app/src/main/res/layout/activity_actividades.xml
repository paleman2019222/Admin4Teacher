<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Actividades"
    android:gravity="center_vertical"
    android:background="#374259">


    <androidx.cardview.widget.CardView
        android:id="@+id/tarjeta_actividad"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:background="#E6E2EF">


        <RelativeLayout
            android:id="@+id/layout_tarjeta_actividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:padding="6dp"
            tools:ignore="UselessParent"
            android:background="#E6E2EF">


            <LinearLayout
                android:id="@+id/layout_datos_actividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titulo_actividad_2"
                    style="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="@string/Grado5"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/txt_fecha_actividad_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/Fecha"
                android:textSize="20sp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/txt_descripcion_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout_datos_actividad"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/Fecha"
                android:textSize="20sp"
                android:textColor="#000000"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>