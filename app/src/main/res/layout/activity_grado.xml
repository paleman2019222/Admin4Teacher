<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#374259"
    tools:context=".Grado">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:onClick="irEstudiantes"
        app:srcCompat="@drawable/baseline_person_24" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_Estudiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estudiantes"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:fontFamily="@font/alata" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="60dp"
        android:onClick="irCurso"
        app:srcCompat="@drawable/libro" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_Curso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cursos"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:fontFamily="@font/alata" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="60sp" />


</LinearLayout>