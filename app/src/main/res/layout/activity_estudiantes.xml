<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#374259"
    tools:context=".Estudiantes">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estudiantes"
        android:textSize="48sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="60dp" android:id="@+id/layout_RV_estudents"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:paddingTop="55dp"/>


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/grupoFabStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-8dp"
        app:fab_addButtonColorNormal="@color/green_light"
        app:fab_addButtonColorPressed="@color/green_light_2"
        android:elevation="8dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/idFabAgregarStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/green_light_2"
            android:src="@drawable/add"
            app:fab_size="mini" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>