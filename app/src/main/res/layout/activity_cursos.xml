<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#374259"
    tools:context=".Cursos">




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/layout_RV_courses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/grupoFabCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-8dp"
        app:fab_addButtonColorNormal="@color/green_light"
        app:fab_addButtonColorPressed="@color/green_light_2"
        android:elevation="8dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/idFabAgregarCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/green_light_2"
            android:src="@drawable/add"
            app:fab_size="mini" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>





</RelativeLayout>